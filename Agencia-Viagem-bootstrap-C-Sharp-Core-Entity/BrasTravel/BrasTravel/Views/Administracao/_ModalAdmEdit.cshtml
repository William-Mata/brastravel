@model Contato


<div class="modal fade bg-transparent" id="editarModalC">
    <div class="modal-dialog modal-dialog-centered modal-lg ">
        <div class="modal-content colorBlue">
            <div class="modal-header">
                <h5 class="modal-title" id="editarModalLabel">Alterar Mensagem</h5>
                <button type="button" class="btn-close btn-outline-warning bg-warning" data-bs-dismiss="modal"
                        aria-label="Close"></button>
            </div>
            <div class="modal-body m-0 p-0 justify-content-center align-content-center">

                <form asp-action="EditAdm" class="m-0 p-0 py-3">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-6 col-sm-6 col-md-6 col-lg-6 mx-auto">
                            <div class="form-group mb-3">
                                <div class="row">
                                    <div class="col-3 col-sm-3 col-md-3 col-lg-3 border border-1 border-warning rounded ">
                                        <input type="hidden" asp-for="IdContato" />

                                        <label asp-for="Nome" class="control-label text-white mt-1">
                                            Nome:
                                        </label>
                                    </div>
                                    <div class="col-9 col-sm-9 col-md-9 col-lg-9 ">
                                        <input asp-for="Nome"
                                               class="form-control text-white bg-transparent btn-outline-warning" readonly />
                                    </div>
                                    <span asp-validation-for="Nome" class="text-warning"></span>
                                </div>
                            </div>
                            <div class="form-group mb-3">
                                <div class="row">
                                    <div class="col-2 col-sm-2 col-md-2 col-lg-2 border border-1 border-warning rounded ">
                                        <label asp-for="Email" class="control-label text-white mt-1">Email: </label>
                                    </div>
                                    <div class="col-10 col-sm-10 col-md-10 col-lg-10 ">
                                        <input asp-for="Email"
                                               class="form-control text-white bg-transparent btn-outline-warning" readonly />
                                    </div>
                                    <span asp-validation-for="Email" class="text-warning"></span>
                                </div>
                            </div>
                        </div>

                        <div class="col-5 col-sm-5 col-md-5 col-lg-5 mx-auto">
                            <div class="form-group mb-3">
                                <div class="row">
                                    <div class="col border border-1 border-warning rounded ">
                                        <label asp-for="Mensagem" class="control-label text-white mt-1">Mensagem: </label>
                                    </div>

                                </div>
                            </div>
                            <div class="form-group mb-3">
                                <div class="row">
                                    <div class="col p-0 m-0">
                                        <textarea asp-for="Mensagem"
                                                  class="form-control text-white bg-transparent btn-outline-warning" rows="5"/>@Model.Mensagem</textarea>
                                    </div>
                                    <span asp-validation-for="Mensagem" class="text-warning"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group mt-3">
                        <div class="modal-footer">
                            <button type="button" class="btn btn-outline-warning text-white"
                                    data-bs-dismiss="modal">
                                Sair
                            </button>
                            <button type="submit" data-bs-save="modal" class="btn btn-outline-warning text-white">Alterar</button>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
