<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BrasTravel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BrasTravel.styles.css" asp-append-version="true" />
</head>
<body class="bg-success">

    <header>
        <nav class="navbar navbar-expand-lg navbar-light text-white colorBlue w-100 p-0">
            <div class="container-fluid">
                <a class="navbar-brand mx-2 my-auto"  asp-area="" asp-controller="Pages" asp-action="Home">

                    <img src="/img/local-na-rede-internet.png"
                         alt="Home">
                </a>
                <div class="collapse navbar-collapse mx-2 my-auto" id="collapsibleNavId">
                    <ul class="navbar-nav">
                    </ul>
                </div>
                <button class="navbar-toggler " type="button" data-bs-toggle="collapse"
                        data-bs-target="#collapsibleNavId" aria-controls="collapsibleNavId" aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-end" id="collapsibleNavId">
                    <ul class="navbar-nav">
                        <li class="nav-item mx-2 my-auto dropdown">
                            <a class="btn btn-sm btn-outline-warning dropdown-toggle text-white" id="dropdownId"
                               data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"
                               href="#">Destinos</a>
                            <div class="dropdown-menu bg-success mx-auto p-0" aria-labelledby="dropdownId">
                                <a class="w-100 btn btn-sm btn-outline-warning text-white"
                                    asp-area="" asp-controller="Pages" asp-action="Nacionais">Nacionais</a>
                                <a class="w-100 btn btn-sm btn-outline-warning text-white"
                                   asp-area="" asp-controller="Pages" asp-action="Internacionais">Internacionais</a>
                            </div>
                        </li>
                        <li class="nav-item mx-2 my-auto">
                            <a class="btn btn-sm btn-outline-warning text-white"  asp-area="" asp-controller="Pages" asp-action="Promocoes">Promoções</a>
                        </li>
                         <li class="nav-item mx-2 my-auto">
                            <a class="btn btn-sm btn-outline-warning text-white"  asp-area="" asp-controller="Pages" asp-action="Viagem">Viagem</a>
                        </li>
                        <li class="nav-item mx-2 my-auto">
                            <a class="btn btn-sm btn-outline-warning text-white "  asp-area="" asp-controller="Pages" asp-action="Contatos">Contatos</a>
                        </li>
                         <li class="nav-item mx-2 my-auto">
                            <a class="btn btn-sm btn-outline-warning text-white "  asp-area="" asp-controller="Administracao" asp-action="Administracao">Administração</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container py-3">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="w-100 border-top footer text-muted bg-warning">
        <div class="container">
            &copy; 2021 - BrasTravel - <a asp-area="" asp-controller="Pages" asp-action="Contatos">Contatos</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
